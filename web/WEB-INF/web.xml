<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>thienloc</display-name>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.resources.listener.GeneralContextListener</listener-class>
    </listener>
    <context-param>
        <param-name>fisrtId</param-name>
        <param-value>2</param-value>
    </context-param>
    <servlet>
        <servlet-name>thienloc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>thienloc</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/view/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/view/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/view/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/view/error.jsp</location>
    </error-page>
</web-app>
